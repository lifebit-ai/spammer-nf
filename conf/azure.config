params {
    autopool_auto_scale = true
    autopool_instance_type = 'Standard_D4s_v3'
    autopool_vm_count = 1
    autopool_max_vm_count = 50

    azure_container_registry_server = false
    azure_container_registry_username = false
    azure_container_registry_password = false
}

azure {
    registry {
        //Azure ecr container registry, like lifebit.azurecr.io
        server = params.azure_container_registry_server
        userName = params.azure_container_registry_username
        password = params.azure_container_registry_password
    }
    batch {
        pools {
            auto {
                autoScale = params.autopool_auto_scale
                vmType = params.autopool_instance_type
                vmCount = params.autopool_vm_count
                maxVmCount = params.autopool_max_vm_count
            }
        }
    }
}
